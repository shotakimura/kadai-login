<ul class="media-list">

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Task</th>
        <th>Status</th>
        <th>Added at</th>
        
      </tr>
    </thead>
    <tbody>
  
<% @tasks.each do |task| %>

      <tr>
          <td>

<%#= link_to task.content, task %>
<%= task.content %>
</td>
          <td>
<%= task.status %>
</td>

          <td>
<%= task.created_at %>
</td>

          <td>
<%= link_to 'Edit', edit_task_path(task), class: 'btn btn-primary btn-xs' %>
</td>

        <td>
<%= link_to "Delete", task, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-xs' %>
</td>
        </tr>
  
<% end %>

   </tbody>
  </table>
  <div>
<%= paginate @tasks %>
  </div>
</ul>