<ul class="media-list">
  
<% tasks.each do |task| %>

    
<% user = task.user %>

    <li class="media">
      <div class="media-left">
        <img class="media-object img-rounded" src="
<%= gravatar_url(current_user, options = { size: 50 }) %>
" alt="">
      </div>
      <div class="media-body">
        <div>
          
<%#= link_to user.name, user_path(user) %>
 <span class="text-muted"> [Task / status] added at 
<%= task.created_at %>
</span> 
<%= link_to user.name, user_path(user) %>
        </div>
        <div>
          <p>
<%= task.content %>  /  <%= task.status %>
</p>
        </div>
      </div>
    </li>
  
<% end %>

  
<%= paginate tasks %>

</ul>